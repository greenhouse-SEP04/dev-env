# ── PostgreSQL ───────────────────────
POSTGRES_DB=greenhouse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ── Host‑side ports (override if busy) ─
API_HOST_PORT=8080
WEB_HOST_PORT=3000

# ── JWT settings ─────────────────────
JWT__ValidIssuer=GreenhouseApi
JWT__ValidAudience=GreenhouseApiUsers
JWT__Secret=THIS_IS_A_DEMO_SECRET_CHANGE_ME_123

# ── Worker account ───────────────────
WorkerCredentials__Username=my-service-account
WorkerCredentials__Password=...change-me...

# ── Front‑end build arg ──────────────
VITE_API_BASE_URL=http://api:8080

# ── LocalStack overrides ─────────────
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
AWS_ENDPOINT_URL=http://localstack:4566

# If your web app ever calls AWS directly:
VITE_AWS_ENDPOINT_URL=http://localstack:4566
