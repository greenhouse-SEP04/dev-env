# ── PostgreSQL ───────────────────────
POSTGRES_DB=greenhouse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ── Host-side ports (override if busy) ─
API_HOST_PORT=8080
WEB_HOST_PORT=3000

# ── JWT settings ─────────────────────
JWT__ValidIssuer=GreenhouseApi
JWT__ValidAudience=GreenhouseApiUsers
JWT__Secret=super-dev-secret-change-me

# ── Worker account ───────────────────
WorkerCredentials__Username=ml-worker
WorkerCredentials__Password=Super!Secure!PW

# ── Front-end build arg ──────────────
VITE_API_BASE_URL=http://api:8080
