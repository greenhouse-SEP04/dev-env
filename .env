# ── PostgreSQL ───────────────────────
POSTGRES_DB=greenhouse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ── Host-side ports (override if busy) ─
API_HOST_PORT=8080
WEB_HOST_PORT=3000

# ── JWT settings ─────────────────────
JWT__ValidIssuer=GreenhouseApi
JWT__ValidAudience=GreenhouseApiUsers
JWT__Secret=THIS_IS_A_DEMO_SECRET_CHANGE_ME

# ── Worker account ───────────────────
WorkerCredentials__Username=my-service-account
WorkerCredentials__Password=...change-me...

# ── Front-end build arg ──────────────
VITE_API_BASE_URL=http://api:8080
